{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    ".next/types/**/*.ts",
    "app", // ✅ Garante inclusão da pasta /app
    "pages", // ✅ Opcional: caso ainda use rotas tradicionais
    "lib",
    "types",
    "hooks",
    "node_modules/@prisma/client/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
